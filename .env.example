# ATLAS Environment Configuration Template
# ==========================================
# Kopiraj ovaj fajl u .env i popuni stvarne vrijednosti
# NIKADA ne commit-uj .env fajl sa stvarnim tajnama!

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/database_name?schema=public"

# Redis Configuration
REDIS_URL="redis://:password@localhost:6379"

# JWT Configuration
JWT_SECRET="your_strong_32_character_secret_here"
JWT_REFRESH_SECRET="different_strong_secret_for_refresh"

# MFA Configuration
MFA_ENCRYPTION_KEY="strong_32_character_mfa_key_here"

# Server Configuration
PORT=3000
NODE_ENV=development

# Security Headers & Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=5
API_RATE_LIMIT_WINDOW_MS=60000
API_RATE_LIMIT_MAX=100

# Session Configuration
SESSION_SECRET="strong_session_secret_here"
COOKIE_MAX_AGE=3600000

# Audit Log Configuration
AUDIT_LOG_RETENTION_DAYS=2555
AUDIT_LOG_MAX_ENTRIES=100000